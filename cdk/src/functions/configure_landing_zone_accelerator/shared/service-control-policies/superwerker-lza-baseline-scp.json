{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyOrgModification",
      "Effect": "Deny",
      "Action": ["organizations:LeaveOrganization", "organizations:DeleteOrganization"],
      "Resource": ["*"],
      "Condition": {
        "ArnNotLike": {
          "aws:PrincipalARN": [
            "arn:${PARTITION}:iam::*:role/${ACCELERATOR_PREFIX}-*",
            "arn:${PARTITION}:iam::*:role/AWSControlTowerExecution"
          ]
        }
      }
    },
    {
      "Sid": "DenyRootAccessKeyCreation",
      "Effect": "Deny",
      "Action": ["iam:CreateAccessKey"],
      "Resource": ["arn:aws:iam::*:root"]
    },
    {
      "Sid": "SWProtectBackup",
      "Effect": "Deny",
      "Action": [
        "iam:AttachRolePolicy",
        "iam:CreateRole",
        "iam:DeleteRole",
        "iam:DeleteRolePermissionsBoundary",
        "iam:DeleteRolePolicy",
        "iam:DetachRolePolicy",
        "iam:PutRolePermissionsBoundary",
        "iam:PutRolePolicy",
        "iam:UpdateAssumeRolePolicy",
        "iam:UpdateRole",
        "iam:UpdateRoleDescription"
      ],
      "Resource": [
        "arn:aws:iam::*:role/service-role/AWSBackupDefaultServiceRole",
        "arn:aws:iam::*:role/SuperwerkerBackupTagsEnforcementRemediationRole"
      ],
      "Condition": {
        "ArnNotLike": {
          "aws:PrincipalARN": "arn:aws:iam::*:role/stacksets-exec-*"
        }
      }
    }
  ]
}
